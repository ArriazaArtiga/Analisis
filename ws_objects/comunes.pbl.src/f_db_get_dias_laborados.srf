global function integer f_db_get_dias_laborados (string as_dpi, long al_no_solicitud);Integer li_dias

Select dias 
into :li_dias
from Solicitud_Tiempo_Servicio 
where No_Solicitud = :al_no_solicitud 
and DPI = :as_dpi
using SQLCA;

Return li_dias
end function


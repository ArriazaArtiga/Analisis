global function decimal f_db_get_pension_inicial (string as_dpi);Decimal ldc_pension

select Pension_Inicial
into :ldc_pension
from Contribuyentes
where DPI = :as_dpi
using SQLCA;

If isnull(ldc_pension) Then
	ldc_pension = 0
end if

Return ldc_pension
end function


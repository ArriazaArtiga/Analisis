global function decimal f_diasacum_vi (string _dpi, integer _sol);decimal ldc_monto

SELECT        MontoDiasAcum
into :ldc_monto
FROM            Solicitud_VI
WHERE        
(DPI = :_dpi)  AND
(Solicitud = :_sol)
using SQLCA;

if isnull(ldc_monto) then
	ldc_monto = 0.00
end if

return round(ldc_monto,2)
end function

